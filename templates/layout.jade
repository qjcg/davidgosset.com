doctype 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Buenard')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Rufina')
      link(rel='stylesheet', href='/css/main.css')
  body
    header
      div.inner
        block header
          h1
            a(href=locals.url)= locals.name
    div#content
      block content
    footer
      div.inner
        block footer
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
